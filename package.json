{
	"name": "obsidian-sample-plugin",
	"version": "0.1.0",
	"description": "This is a plugin for Obsidian.md to add custom text styling with markdown syntax.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"copy": "scripts/update-plugin.sh \"$npm_config_dest\"",
		"build-and-copy": "npm run build && npm run copy",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.14.47",
		"eslint": "^8.32.0",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@codemirror/language": "https://github.com/lishid/cm-language",
		"@codemirror/state": "^6.7.3",
		"@codemirror/view": "^6.7.3"
	}
}
